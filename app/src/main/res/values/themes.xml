<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LesMots" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_accent</item>
        <item name="colorPrimaryVariant">@color/background_black</item>
        <item name="colorOnPrimary">@color/font_color</item>
        <!-- Keyboard colors. -->
        <item name="colorSecondary">@color/background_accent</item>
        <item name="colorSecondaryVariant">@color/background_accent</item>
        <item name="colorOnSecondary">@color/font_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LesMots.Fullscreen" parent="Theme.LesMots">
        <item name="android:actionBarStyle">@style/Widget.Theme.LesMots.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.LesMots.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>